%form#sort
  %select{:name => "sort_by"}
    = options_for_select([["Név szerint","name"],["Ár szerint","price"]], params[:sort_by])
  %input#submit{:type=> "submit", :value=>"Rendezd"}

%table.products
  -for product in @products
    %tbody.product
      %tr.details
        %td
          = image_for_product(product) unless product.images.empty?
          %h3.title= product.name
          .description= product.description
        %td.price= price_for_product(product)
      %tr.commands
        %td{:colspan=>"2"}
          %a{ :href=>"product-details.html"} Megnézem!
          %a{ :href=>"show-cart.html" } Kosárba vele!
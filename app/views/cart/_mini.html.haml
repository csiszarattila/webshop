%table#index-cart
  -for item in @cart.items 
    %tr
      %td.img= product_sample_image_url(item.product, {:size => '50x50', :url => product_path(item.product), :title => "Megnézem!", :lightbox=>false} )
      %td.quantity= item.quantity
      %td.price= format_price(item.price)
    %tr.title
      %td{ :colspan => '3' }= item.product.name
  %tr.sum
    %td{ :colspan => '2' } Összesen
    %td.price.price-sum= format_price(@cart.total_price)
.cart-commands
  =link_to 'Mutasd a kosaram', show_cart_path
  %br
  =link_to 'Tovább a rendeléshez', order_address_path
%tbody.product
  %tr.details
    %td
      = sample_image_for_product(product)
      %h3.title= product.name
      .description= product.description
    %td.price= price_for_product(product)
  %tr.commands
    %td{:colspan=>"2"}
      = render :partial => 'products/commands', :locals => {:product => product}